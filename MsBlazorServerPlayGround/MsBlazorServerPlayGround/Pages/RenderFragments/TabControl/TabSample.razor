        </TabPage>
        <TabPage Text=".NET Tools">
            <br />
            <h1>.NET Tools</h1>
            <hr />
            <p>
                @lorem.Paragraphs(6);
            </p>
            <br />
            <a href="https://dotnet.microsoft.com/platform/tools" target="_blank">.NET Tools &amp; Editors</a>
        </TabPage>
        <TabPage Text="Blazor University">
            <br />
            <h1>Blazor University</h1>
            <hr />
