@page "/Forms/state-access"
@using MsBlazorServerPlayGround.Models

<h3>Accessing Form State</h3>

<EditForm Model="Contact">
    <div class="form-group">
        <label for="EmailAddress">Email address</label>
        <div class="input-group @context.FieldCssClass(() => Contact.EmailAddress)">
            <div class="input-group-prepend">
                <span class="input-group-text">@@</span>
            </div>
            <InputText @bind-Value=Contact.EmailAddress id="EmailAddress" class="form-control" type="email" />
        </div>
    </div>
</EditForm>

@code {
    private readonly ContactInfo Contact = new();
}
